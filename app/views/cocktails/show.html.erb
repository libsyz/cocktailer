
<h3> Details for <%= @cocktail.name %></h3>

<ul>
<% @cocktail.doses.each do  |dose| %>

  <li> <%= dose.description %> of <%= dose.ingredient.name %>
       <%=  link_to "Delete Dose", dose_path(dose), method: :delete %></li>


<% end %>
</ul>


<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.input :ingredient_id, collection: Ingredient.all %>
  <%= f.button :submit %>
<% end %>


<%=  link_to "Back to Home", root_path %>
<%=  link_to "Add doses to #{@cocktail.name}", new_cocktail_dose_path(@cocktail.id) %>
